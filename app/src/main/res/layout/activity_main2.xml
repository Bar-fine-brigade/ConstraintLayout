<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="取消"
        android:textColor="#ff666666"
        android:textSize="14sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_information"
        app:layout_constraintBottom_toBottomOf="@+id/tv_information" />

    <TextView
        android:id="@+id/tv_information"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="基本资料"
        android:textColor="#ff333333"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:text="保存"
        android:textColor="#ff4f61e7"
        android:textSize="14sp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_information"
        app:layout_constraintBottom_toBottomOf="@+id/tv_information" />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#80666666"
        app:layout_constraintBottom_toBottomOf="@+id/tv_information"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_portrait"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center|left"
        android:text="头像"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/line1"
        app:layout_constraintTop_toBottomOf="@+id/line1"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_save"
        app:layout_constraintBottom_toBottomOf="@+id/tv_portrait"
        app:layout_constraintTop_toTopOf="@+id/tv_portrait"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
        app:srcCompat="@drawable/l" />

    <TextView
        android:id="@+id/right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        app:layout_constraintEnd_toEndOf="@+id/tv_save"
        app:layout_constraintBottom_toBottomOf="@+id/tv_portrait"
        app:layout_constraintTop_toTopOf="@+id/tv_portrait"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"/>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#80666666"
        app:layout_constraintBottom_toBottomOf="@+id/tv_portrait"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginRight="30dp"
        android:gravity="center|left"
        android:text="用户名"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_portrait"
        app:layout_constraintTop_toBottomOf="@+id/tv_portrait" />

    <TextView
        android:id="@+id/tv_user1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="樱冉"
        android:textColor="#367386"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_user"
        app:layout_constraintEnd_toEndOf="@+id/tv_save" />

    <TextView
        android:id="@+id/right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_save"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user"
        app:layout_constraintTop_toTopOf="@+id/tv_user"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"/>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#80666666"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginRight="30dp"
        android:gravity="center|left"
        android:text="性别"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_user" />

    <TextView
        android:id="@+id/tv_gender1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女"
        android:textColor="#888888"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_user1"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_gender" />

    <TextView
        android:id="@+id/right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_save"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gender"
        app:layout_constraintTop_toTopOf="@+id/tv_gender"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"/>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#80666666"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gender"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_birth"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginRight="30dp"
        android:gravity="center|left"
        android:text="出生年月"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_gender"
        app:layout_constraintTop_toBottomOf="@+id/tv_gender" />

    <TextView
        android:id="@+id/tv_birth1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2001年7月"
        android:textColor="#888888"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_birth"
        app:layout_constraintEnd_toEndOf="@+id/tv_gender1"/>

    <TextView
        android:id="@+id/right4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_save"
        app:layout_constraintBottom_toBottomOf="@+id/tv_birth"
        app:layout_constraintTop_toTopOf="@+id/tv_birth"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"/>

    <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#80666666"
        app:layout_constraintBottom_toBottomOf="@+id/tv_birth"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_introduction"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center|left"
        android:text="个人简介"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_birth"
        app:layout_constraintStart_toStartOf="@+id/tv_birth"
        app:layout_constraintTop_toBottomOf="@+id/tv_birth" />

    <EditText
        android:id="@+id/tv_introduction1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape"
        android:gravity="top|left"
        android:hint="请输入自我介绍"
        android:inputType="text"
        android:textColor="#888888"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_introduction"
        app:layout_constraintStart_toStartOf="@+id/tv_introduction"
        app:layout_constraintTop_toBottomOf="@+id/tv_introduction"/>


    <TextView
        android:id="@+id/tv_introduction2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginRight="0dp"
        android:text="0/100"
        android:textColor="#888888"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_introduction1"
        app:layout_constraintEnd_toEndOf="@+id/tv_introduction1" />

</androidx.constraintlayout.widget.ConstraintLayout>