<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_name"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_FF333333"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginLeft="14dp"
            android:textSize="14sp"
            android:textColor="@color/black_FF999999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"/>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="@string/save"
            android:textSize="14sp"
            android:textColor="@color/blue_FF4F61E7"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            />

        <View
            android:id="@+id/divider_1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#FF999999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            />

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="@string/head_img"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black_FF333333"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/divider_1"/>

        <ImageView
            android:id="@+id/iv_arrow_1"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintBottom_toBottomOf="@id/tv_head"
            app:layout_constraintTop_toTopOf="@id/tv_head"/>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="43.5dp"
            android:layout_height="43.5dp"
            app:srcCompat="@drawable/lu_fai"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_arrow_1"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_1"
            app:layout_constraintTop_toTopOf="@+id/iv_arrow_1"
             />

        <View
            android:id="@+id/divider_2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_FFe1e1e1"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintStart_toStartOf="@id/tv_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_head"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="@string/user_name"
            android:textColor="@color/black_FF333333"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/divider_2"/>

        <ImageView
            android:id="@+id/iv_arrow_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintTop_toTopOf="@id/tv_user_name"/>

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_num"
            android:textColor="@color/gray_ff999999"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@id/iv_arrow_2"
            app:layout_constraintBottom_toBottomOf="@id/iv_arrow_2"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_2"/>

        <View
            android:id="@+id/divider_3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_FFe1e1e1"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_name" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="@string/gender"
            android:textSize="15sp"
            android:textColor="@color/black_FF333333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/divider_3"
            />

        <TextView
            android:id="@+id/tv_gender_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:textSize="15sp"
            android:textColor="@color/black_FF999999"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@id/iv_arrow_03"
            app:layout_constraintBottom_toBottomOf="@id/iv_arrow_03"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_03"/>

        <ImageView
            android:id="@+id/iv_arrow_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintBottom_toBottomOf="@id/tv_gender"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintTop_toTopOf="@id/tv_gender"/>

        <View
            android:id="@+id/divider_04"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_FFe1e1e1"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender" />

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="@string/birth"
            android:textSize="15sp"
            android:textColor="@color/black_FF333333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/divider_04"/>

        <ImageView
            android:id="@+id/iv_arrow_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:layout_constraintBottom_toBottomOf="@id/tv_birth"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintTop_toTopOf="@id/tv_birth"/>

        <TextView
            android:id="@+id/tv_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_date"
            android:textColor="@color/gray_ff999999"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@id/iv_arrow_04"
            app:layout_constraintBottom_toBottomOf="@id/iv_arrow_04"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_04"/>

        <View
            android:id="@+id/divider_05"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_FFe1e1e1"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@+id/tv_birth" />

        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="@string/introduction"
            android:textSize="15sp"
            android:textColor="@color/black_FF333333"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/divider_05"/>

        <View
            android:id="@+id/bg_introduction"
            android:layout_width="0dp"
            android:layout_height="121.5dp"
            android:background="@drawable/shape_bg_introduction"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintTop_toBottomOf="@id/tv_introduction"/>

        <EditText
            android:id="@+id/et_introduction"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:gravity="top|left"
            android:hint="@string/app_Edit1"
            app:layout_constraintTop_toTopOf="@id/bg_introduction"
            app:layout_constraintBottom_toBottomOf="@id/bg_introduction"
            app:layout_constraintStart_toStartOf="@id/tv_cancel"
            app:layout_constraintEnd_toEndOf="@id/tv_save"
            app:layout_constraintTop_toBottomOf="@id/tv_introduction"/>

        <TextView
            android:id="@+id/tv_input_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="12dp"
            android:text="@string/input_num"
            android:textSize="11sp"
            android:textColor="@color/gray_ff999999"
            app:layout_constraintBottom_toBottomOf="@+id/et_introduction"
            app:layout_constraintEnd_toEndOf="@+id/et_introduction" />

</androidx.constraintlayout.widget.ConstraintLayout>