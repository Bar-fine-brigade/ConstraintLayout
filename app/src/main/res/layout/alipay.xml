<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#333333"
        android:text="提交申请"
        android:textSize="30sp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_left_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/wire"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#80666666"
        app:layout_constraintBottom_toBottomOf="@+id/tv_headline"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_extract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="提取金额 (元)"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_money"
        android:text="￥ "
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_extract"
        app:layout_constraintStart_toStartOf="@id/tv_extract"
        />

    <TextView
        android:id="@+id/tv_figure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="577555.00"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FF8104"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_money"
        app:layout_constraintStart_toEndOf="@+id/tv_money"
        />
    <View
        android:id="@+id/tv_money_wire"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80666666"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintEnd_toEndOf="@id/tv_extract"
        app:layout_constraintStart_toStartOf="@id/tv_extract"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/tv_withdraw_deposit"
        android:text="可提现金额 4250元"
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_money_wire"
        app:layout_constraintStart_toStartOf="@id/tv_money_wire"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/tv_all_withdrawa"
        android:text="全部提现"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#4F61E7"
        android:textStyle="bold"
        android:background="@drawable/drawable"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_withdraw_deposit"
        app:layout_constraintEnd_toEndOf="@id/tv_money_wire"
        app:layout_constraintTop_toBottomOf="@id/tv_money_wire"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/tv_withdraw_wire"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/tv_withdraw_deposit"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_withdrawal_way"
        android:text="提现方式"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_withdraw_wire"
        app:layout_constraintStart_toStartOf="@id/tv_extract"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/tv_frame"
        android:background="@drawable/ic_baseline"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_withdrawal_way"
        app:layout_constraintTop_toBottomOf="@+id/tv_withdrawal_way" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_alipay"
        android:text="支付宝"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_frame"
        app:layout_constraintTop_toTopOf="@id/tv_frame"
        app:layout_constraintEnd_toEndOf="@id/tv_frame"
        />

    <ImageView
        android:id="@+id/im_alipay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_frame"
        app:layout_constraintEnd_toStartOf="@+id/tv_alipay"
        app:layout_constraintTop_toTopOf="@id/tv_frame"
        app:srcCompat="@drawable/alipay"
        />
    <ImageView
        android:id="@+id/im_right"
        android:layout_width="30dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_frame"
        app:layout_constraintEnd_toEndOf="@+id/tv_frame"
        app:srcCompat="@drawable/right"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/tv_frame2"
        android:background="@drawable/ic_baseline2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_frame"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_frame"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bank"
        android:text="银行卡"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_frame2"
        app:layout_constraintTop_toTopOf="@id/tv_frame2"
        app:layout_constraintEnd_toEndOf="@id/tv_frame2"
        />
    <ImageView
        android:id="@+id/im_bank"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_frame2"
        app:layout_constraintEnd_toStartOf="@+id/tv_bank"
        app:layout_constraintTop_toTopOf="@id/tv_frame2"
        app:srcCompat="@drawable/bank"
        />

    <TextView
        android:id="@+id/tv_affirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确认提现"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_affirm"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_extract"
        app:layout_constraintEnd_toEndOf="@id/tv_extract"/>


</androidx.constraintlayout.widget.ConstraintLayout>